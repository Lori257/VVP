using namespace std;

int main()
{
    
	setlocale(LC_ALL, "Russian");
	SetConsoleOutputCP(1251);
	SetConsoleCP(1251);
	int i;
	char c;
	fstream F; 
	string s, filename;
	s = "";
	filename = "";

	cout << "Введите путь файла: " << endl;
	getline(cin, filename);
	F.open(filename); 
	if (F) 
	{
		while (!F.eof()) 
		{
			getline(F, s, '\0'); 
			for (i = s.find(' ') + 1; i < s.length(); i++) {
				F << s[i];
			}
		}
		F.close();
	}
	else cout << "Файл не существует" << endl;

	F.open(filename, ios::out);
	if (F)
	{
		for (i = s.find(' ') + 1; i < s.length(); i++) {
			F << s[i];
		}
		F.close();
	}
	else cout << "Файл не существует" << endl;
}
