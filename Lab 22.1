
#include "pch.h"
#include <iostream>
#include <fstream>
#include <Math.h>
#include <windows.h>
#include <string>

using namespace std;

int main()
{
    
	setlocale(LC_ALL, "Russian");
	SetConsoleOutputCP(1251);
	SetConsoleCP(1251);
	int i;
	char c;
	fstream F; //переменная для файла
	string s, filename;
	s = "";
	filename = "";

	cout << "Введите путь файла: " << endl;
	getline(cin, filename);
	F.open(filename); //открыть файл
	if (F) // проверка, существует ли файл
	{
		while (!F.eof()) // проверка, не пуст ли файл
		{
			getline(F, s, '\0'); //  \0 - конец строки
			for (i = s.find(' ') + 1; i < s.length(); i++) {
				F << s[i];
			}
		}
		F.close();
	}
	else cout << "Файл не существует" << endl;

	F.open(filename, ios::out); //ios::out - производить операции
	if (F)
	{
		for (i = s.find(' ') + 1; i < s.length(); i++) {
			F << s[i];
		}
		F.close();
	}
	else cout << "Файл не существует" << endl;
}
