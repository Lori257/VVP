int main()
{
	setlocale(LC_ALL, "Russian");
	SetConsoleOutputCP(1251);
	SetConsoleCP(1251);
	int i, n, b;	
	string s;
	s = "";
	cout << "Введите строку S: ";
	cin.ignore();
	getline(cin, s);
	n = 0;
	b = INT_MAX;
	for (i = 0; i < s.length(); i++)
	{
