#include <string>

using namespace std;

int main()
{
	setlocale(LC_ALL, "Russian");
	SetConsoleOutputCP(1251);
	SetConsoleCP(1251);
	int i, n;	
	string s;
	s = "";
	cout << "Введите строку S: ";	
	getline(cin, s);
	n = 0;
	for (i = 0; i < s.length(); i++) {
		if (s[i] >= 'A' && s[i] <= 'Z') {
			n++;
		}
	}
	cout << "Количество прописных латинских букв в строке: " << n << endl;
	return 0;
}
